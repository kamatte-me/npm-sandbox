{
  "name": "@kamatte-me/npm-sandbox",
  "version": "0.7.6",
  "description": "My sandbox project",
  "keywords": [],
  "homepage": "https://github.com/kamatte-me/npm-sandbox#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamatte-me/npm-sandbox.git"
  },
  "license": "MIT",
  "author": "kamatte-me",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "lint:ci": "biome ci .",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "publint": "publint",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "changeset:version": "changeset version && pnpm lint:fix",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@types/node": "22.18.6",
    "publint": "0.3.15",
    "rollup-plugin-node-externals": "8.1.2",
    "typescript": "5.9.3",
    "vite": "7.2.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=4.4.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=10.3.x"
  },
  "publishConfig": {
    "access": "public"
  }
}
